{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "linux",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/main.cpp",
                "-o",
                "${fileDirname}/main"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: /usr/bin/g++"
        },
        {
            "type": "cppbuild",
            "label": "Win32",
            "command": "C:/env/mingw-w64/mingw64/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/main.cpp",
                "-o",
                "${fileDirname}/main.exe"
            ],
            "options": {
                "cwd": "C:/env/mingw-w64/mingw64/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "编译器: C:/env/mingw-w64/mingw64/bin/g++.exe"
        }
    ],
    "version": "2.0.0"
}